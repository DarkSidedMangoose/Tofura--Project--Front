{
  "compilerOptions": {
    // Modern baseline: ESNext target gives async/await, classes, etc.
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],

    // Allow JS interop
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,

    // Module system
    "module": "Node16",
    "moduleResolution": "Node16", // âœ… modern, avoids deprecation warnings
    // Extras
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    // React JSX transform
    "jsx": "react-jsx"
  },
  "include": ["src"]
}
